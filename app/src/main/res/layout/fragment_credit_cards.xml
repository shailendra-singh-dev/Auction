<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg_white"
    android:orientation="vertical"
    tools:context="com.shail.auctionapp.ui.fragments.CreditCardsFragment">

    <TextView
        android:id="@+id/credit_cards_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/cards_holder"
        android:textSize="@dimen/credit_card_empty_text_size" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/credit_cards_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
